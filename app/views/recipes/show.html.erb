<h1><%= @recipe.name %></h1>
<% if @user && !@rated %>
  <%= render '/ratings/rating' %>
<% else %>
  <%= @avg_rating %> Stars
<% end %>
<h3>Ingredients</h3>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
      <li><%= ingredient.name %>  (<%= find_metrics(ingredient, @recipe) %>)</li>
    <% end %>
  </ul>

  <%= link_to "Add New Ingredient", new_recipe_ingredient_path(@recipe) %>
<h3>Instructions</h3>
<%= @recipe.directions %>
